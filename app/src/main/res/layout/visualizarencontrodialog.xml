<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_outline">

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="12dp"
                android:id="@+id/visualizarEncontroSair"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:background="@color/white"
                app:tint="#CF2525"/>
            <TextView
                android:minWidth="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:id="@+id/visualizarEncontroEncontro"
                android:fontFamily="sans-serif-black"
                android:textSize="24sp"
                android:layout_width="240dp"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text="Encontro:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:minWidth="40dp"
                android:layout_marginStart="16dp"
                android:id="@+id/visualizarEncontroData"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:layout_width="200dp"
                android:layout_height="24dp"
                android:gravity="center_vertical"
                android:text="Data: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/visualizarEncontroEncontro"/>
        <TextView
            android:minWidth="40dp"
            android:layout_marginStart="16dp"
            android:id="@+id/visualizarEncontroObservacoes"
            android:fontFamily="sans-serif"
            android:textSize="18sp"
            android:layout_width="200dp"
            android:layout_height="24dp"
            android:gravity="center_vertical"
            android:text="Observaçoes: "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/visualizarEncontroData"/>
        <LinearLayout
            android:padding="4dp"
            android:orientation="vertical"
            android:background="@drawable/round_outline"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="34dp"
            app:layout_constraintTop_toBottomOf="@id/visualizarEncontroData"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <LinearLayout
                android:layout_weight="1.2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Pontuações das equipes"
                    android:gravity="center"
                    android:fontFamily="sans-serif-medium"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:text="Equipe Azul"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <TextView
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:text="Equipe Vermelha"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <TextView
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:text="Equipe Verde"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <TextView
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:text="Equipe Laranja"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <TextView
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:text="Equipe Amarela"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.98"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.google.android.material.button.MaterialButton
                    android:padding="0dp"
                    android:textSize="18sp"
                    android:clickable="false"
                    android:id="@+id/visualizarEncontroPontuacaoAzul"
                    android:text="100"
                    android:gravity="center"
                    android:backgroundTint="@color/azul"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    app:cornerRadius="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"/>

                <com.google.android.material.button.MaterialButton

                    android:padding="0dp"
                    android:textSize="18sp"
                    android:clickable="false"
                    android:id="@+id/visualizarEncontroPontuacaoVermelha"
                    android:text="0"
                    android:gravity="center"
                    android:backgroundTint="@color/vermelho"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    app:cornerRadius="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"/>
                <com.google.android.material.button.MaterialButton

                    android:padding="0dp"
                    android:textSize="18sp"
                    android:clickable="false"
                    android:id="@+id/visualizarEncontroPontuacaoVerde"
                    android:text="0"
                    android:gravity="center"
                    android:backgroundTint="@color/verde"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    app:cornerRadius="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"/>
                <com.google.android.material.button.MaterialButton

                    android:padding="0dp"
                    android:textSize="18sp"
                    android:clickable="false"
                    android:id="@+id/visualizarEncontroPontuacaoLaranja"
                    android:text="0"
                    android:gravity="center"
                    android:backgroundTint="@color/laranja"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    app:cornerRadius="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"/>
                <com.google.android.material.button.MaterialButton

                    android:padding="0dp"
                    android:textSize="18sp"
                    android:clickable="false"
                    android:id="@+id/visualizarEncontroPontuacaoAmarela"
                    android:text="0"
                    android:gravity="center"
                    android:backgroundTint="@color/amarelo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    app:cornerRadius="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_weight="1.1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/visualizarEncontroDiminuirPontuacaoAzul"
                    android:text="0"
                    android:gravity="center"
                    android:background="@drawable/menos_um_foreground"
                    app:backgroundTint="@color/black"
                    android:backgroundTint="@color/transparente"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cornerRadius="5dp"/>
                <com.google.android.material.button.MaterialButton

                    android:id="@+id/visualizarEncontroAumentarPontuacaoAzul"
                    android:text="0"
                    android:gravity="center"
                    android:background="@drawable/mais_um_foreground"
                    app:backgroundTint="@color/black"
                    android:backgroundTint="@color/transparente"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cornerRadius="5dp"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/visualizarEncontroDiminuirPontuacaoVermelho"
                    android:text="0"
                    android:gravity="center"
                    android:background="@drawable/menos_um_foreground"
                    app:backgroundTint="@color/black"
                    android:backgroundTint="@color/transparente"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cornerRadius="5dp"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/visualizarEncontroAumentarPontuacaoVermelho"
                    android:text="0"
                    android:gravity="center"
                    android:background="@drawable/mais_um_foreground"
                    app:backgroundTint="@color/black"
                    android:backgroundTint="@color/transparente"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cornerRadius="5dp"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/visualizarEncontroDiminuirPontuacaoVerde"
                    android:text="0"
                    android:gravity="center"
                    android:background="@drawable/menos_um_foreground"
                    app:backgroundTint="@color/black"
                    android:backgroundTint="@color/transparente"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cornerRadius="5dp"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/visualizarEncontroAumentarPontuacaoVerde"
                    android:text="0"
                    android:gravity="center"
                    android:background="@drawable/mais_um_foreground"
                    app:backgroundTint="@color/black"
                    android:backgroundTint="@color/transparente"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cornerRadius="5dp"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/visualizarEncontroDiminuirPontuacaoLaranja"
                    android:text="0"
                    android:gravity="center"
                    android:background="@drawable/menos_um_foreground"
                    app:backgroundTint="@color/black"
                    android:backgroundTint="@color/transparente"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cornerRadius="5dp"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/visualizarEncontroAumentarPontuacaoLaranja"
                    android:text="0"
                    android:gravity="center"
                    android:background="@drawable/mais_um_foreground"
                    app:backgroundTint="@color/black"
                    android:backgroundTint="@color/transparente"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cornerRadius="5dp"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/visualizarEncontroDiminuirPontuacaoAmarelo"
                    android:text="0"
                    android:gravity="center"
                    android:background="@drawable/menos_um_foreground"
                    app:backgroundTint="@color/black"
                    android:backgroundTint="@color/transparente"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cornerRadius="5dp"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/visualizarEncontroAumentarPontuacaoAmarelo"
                    android:text="0"
                    android:gravity="center"
                    android:background="@drawable/mais_um_foreground"
                    app:backgroundTint="@color/black"
                    android:backgroundTint="@color/transparente"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cornerRadius="5dp"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/round_outline"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="340dp"
            android:orientation="vertical"
            >
            <TextView
                android:gravity="center|top"
                android:layout_marginEnd="4dp"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:text="Lista de presença"
                android:fontFamily="sans-serif-medium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="4dp"
                android:textSize="18sp"
                android:layout_marginStart="4dp"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/visualizarEncontroFazerChamada"
                android:backgroundTint="#FF3700B3"
                app:cornerRadius="5dp"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Fazer chamada"
                android:textSize="16sp">

            </com.google.android.material.button.MaterialButton>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>