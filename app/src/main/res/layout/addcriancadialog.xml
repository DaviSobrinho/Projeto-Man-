<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_outline">
                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="16dp"
                    android:id="@+id/criancaSair"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:background="@color/white"
                    app:tint="#CF2525"/>
                <TextView
                    android:minWidth="40dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:id="@+id/cadastrarCrianca"
                    android:fontFamily="sans-serif-black"
                    android:textSize="24sp"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:text="Cadastrar criança"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/criancaNome"
                    android:hint="Nome"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="100dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"/>
                <TextView
                    android:textColor="#808080"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Data de nascimento"
                    android:fontFamily="sans-serif"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="160dp"
                    android:textSize="17sp"
                    android:layout_marginStart="28dp"/>
                <DatePicker
                    android:id="@+id/criancaDataNascimento"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_height="210dp"
                    android:layout_marginTop="160dp"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner"
                    android:scaleY="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/criancaNomeResponsavel"
                    android:hint="Nome do responsável"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="370dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"/>
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/criancaTelefoneResponsavel"
                    android:hint="Telefone do responsável"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="430dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"/>
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/criancaEndereco"
                    android:hint="Endereco"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="490dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"/>
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/criancaObservacoes"
                    android:hint="Observações"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="550dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"/>
                <com.google.android.material.button.MaterialButton
                    app:cornerRadius="5dp"
                    android:id="@+id/criancaCadastrar"
                    android:text="Cadastrar"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="620dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/design_default_color_primary_dark"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>